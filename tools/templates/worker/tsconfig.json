{    
    "compilerOptions": {
        "target": "ES2017",        
        "moduleResolution": "Node",
        "allowJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,        
        "declaration": false,
        "baseUrl": ".",
        "outDir": "lib",
        "paths": {
            "@ijstech/node":["*", "./node_modules/@ijstech/node"],
            "@ijstech/*":["*", "./node_modules/@ijstech/node/packages/*"]            
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}